  "icons": [
    {
      "src": "logo-lexradio.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "logo-lexradio-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Reproducir Radio",
      "short_name": "Play",
      "description": "Reproducir LEX Radio en vivo",
      "url": "/?action=play",
      "icons": [
        {
          "src": "icons/play-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Ver Programas",
      "short_name": "Programas",
      "description": "Ver la programación de LEX Radio",
      "url": "/?section=programas",
      "icons": [
        {
          "src": "icons/programs-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-handler/",
